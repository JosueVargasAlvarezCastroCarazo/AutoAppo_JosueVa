<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoAppo_JosueVa.Views.AppoLoginPage"
             Shell.NavBarIsVisible="True"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="background"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Auto Appo"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" 
                 FontSize="Large"
                   Margin="50,200,50,0"/>

            <Entry Placeholder="Email" Margin="50,100,50,0"/>
            <Entry Placeholder="Password" Margin="50,30,50,0"/>

            <Button Text="Login" Margin="80,50,80,0" CornerRadius="20"/>
            <Button Text="Sign Up" Margin="100,10,100,0" CornerRadius="20"/>

            <Label Text="Olvido la contra" TextColor="Red" Margin="50,100,50,0" HorizontalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>